        <servlet-class>Advertisement.AddAdver</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayAdverImage</servlet-name>
        <servlet-class>Advertisement.DisplayAdverImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditAdver</servlet-name>
        <servlet-class>Advertisement.EditAdver</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RetailerRegister</servlet-name>
