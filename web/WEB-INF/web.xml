    <servlet>
        <servlet-name>DisplayImage</servlet-name>
        <servlet-class>Advertisement.DisplayImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditRetailer</servlet-name>
        <servlet-class>Advertisement.EditRetailer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsumeRegister</servlet-name>
