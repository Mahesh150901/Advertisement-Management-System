        <servlet-name>RetailerRegister</servlet-name>
        <url-pattern>/RetailerRegister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddAdverRet</servlet-name>
        <url-pattern>/AddAdverRet</url-pattern>
    </servlet-mapping>
