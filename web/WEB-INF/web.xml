    </servlet>
    <servlet>
        <servlet-name>AddAdverRet</servlet-name>
        <servlet-class>Advertisement.AddAdverRet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayImage</servlet-name>
        <url-pattern>/DisplayImage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditRetailer</servlet-name>
        <url-pattern>/EditRetailer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsumeRegister</servlet-name>
        <url-pattern>/ConsumeRegister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayCusImage</servlet-name>
